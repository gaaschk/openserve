<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="manageLoanProgramSettingsController.loadManageLoanProgramsModel()" result="flowScope.manageLoanProgramsModel"/>
	</on-start>

	<view-state id="manageloanprograms" view="loanprogram/managedefaultloanprogramsettings" model="manageLoanProgramsModel" >
		<transition on="addLoanProgram" to="manageloanprograms">
			<evaluate expression="manageLoanProgramSettingsController.addLoanProgram(manageLoanProgramsModel)"/>
		</transition>
		<transition on="addLoanProgramSettings" to="manageloanprograms">
			<evaluate expression="manageLoanProgramSettingsController.addLoanProgramSettings(manageLoanProgramsModel)"/>
		</transition>
		<transition on="save" to="manageLoanProgramSettingsComplete">
			<evaluate expression="manageLoanProgramSettingsController.save(manageLoanProgramsModel)"/>
		</transition>
	</view-state>

	<end-state id="manageLoanProgramSettingsComplete" />
</flow>