<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="manageLoanProgramSettingsController.loadDefaultLoanProgramSettingsListModel()" result="flowScope.defaultLoanProgramSettingsListModel"/>
	</on-start>

	<view-state id="manageloantypes" view="loantype/managedefaultloanprogramsettings" model="defaultLoanProgramSettingsListModel" >
		<transition on="addLoanType" to="manageloantypes">
			<evaluate expression="manageLoanProgramSettingsController.addLoanType(defaultLoanProgramSettingsListModel)"/>
		</transition>
		<transition on="addLoanTypeProfile" to="manageloantypes">
			<evaluate expression="manageLoanProgramSettingsController.addLoanTypeProfile(defaultLoanProgramSettingsListModel)"/>
		</transition>
		<transition on="save" to="manageLoanTypeProfileComplete">
			<evaluate expression="manageLoanProgramSettingsController.save(defaultLoanProgramSettingsListModel)"/>
		</transition>
	</view-state>

	<end-state id="manageLoanTypeProfileComplete" />
</flow>