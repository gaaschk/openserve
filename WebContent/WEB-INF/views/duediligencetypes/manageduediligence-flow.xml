<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start> 
		<evaluate expression="dueDiligenceController.loadAllDueDiligenceEventTypes()" result="flowScope.manageDueDiligenceTypesModel"/>
	</on-start>

	<view-state id="manageduediligenceeventtypes" view="duediligencetypes/manageeventtypes">
		<transition on="addDueDiligenceType" to="manageduediligenceeventtypes">
			<evaluate expression="dueDiligenceController.addNewDueDiligenceType(manageDueDiligenceTypesModel)"></evaluate>
		</transition>
		<transition on="save" to="manageDueDiligenceEventTypesComplete">
			<evaluate expression="dueDiligenceController.save(manageDueDiligenceTypesModel)"/>
		</transition>
	</view-state>
	
	<end-state id="manageDueDiligenceEventTypesComplete" />
</flow>