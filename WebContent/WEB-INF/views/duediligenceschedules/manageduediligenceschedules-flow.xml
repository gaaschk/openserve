<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start> 
		<evaluate expression="dueDiligenceController.loadAllDueDiligenceSchedules()" result="flowScope.manageDueDiligenceSchedulesModel"/>
	</on-start>

	<view-state id="manageduediligenceschedules" view="duediligenceschedules/manageschedules">
		<transition on="addDueDiligenceSchedule" to="manageduediligenceschedules">
			<evaluate expression="dueDiligenceController.addNewDueDiligenceSchedule(manageDueDiligenceSchedulesModel)"></evaluate>
		</transition>
		<transition on="setLoanProgram" to="manageduediligenceschedules">
			<evaluate expression="dueDiligenceController.setLoanProgram(manageDueDiligenceSchedulesModel)"></evaluate>
		</transition>
		<transition on="save" to="manageDueDiligenceSchedulesComplete">
			<evaluate expression="dueDiligenceController.save(manageDueDiligenceSchedulesModel)"/>
		</transition>
	</view-state>
	
	<end-state id="manageDueDiligenceSchedulesComplete" />
</flow>